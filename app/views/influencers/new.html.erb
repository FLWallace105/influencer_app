<div class='row'>
  <div class="col col-sm-12"</div>
    <h1 class='text-center'> New Influencers </h1>
    <div class='alert alert-info text-center' >
      Save influencers from a csv to the database.
      Influencers that already exist will be updated.
    </div>
    <%= form_for @import, url: import_influencers_path, multipart: true do |f| %>
      <% if @import.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% @import.errors.full_messages.each do |msg| %>
            <div><%= msg %></div>
          <% end %>
        </div>
      <% end %>
      <%= f.file_field :file %>
      <br>
      <%= f.submit 'Upload Influencers', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div class="col col-sm-12 top-buffer"</div>
    <div class='alert alert-info text-center' >
      Create one Influencer at a time below.
    </div>
    <%= render 'form', influencer: @influencer %>
  </div>
</div>
