<div class="row">
  <div class="col-sm-5">
    <div id="custom-search-input">
      <div class="input-group col-md-12">
        <form action="<%= action %>" method="get">
          <input class="form-control input-lg" name="query" value="<%= "#{query && query != '*' ? query : nil}" %>" placeholder="email or last name" title="Search" type="text"></input>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <span class="input-group-btn">
            <button class="btn btn-info btn-lg" title="Search" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </span>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="row"></div>
<div class="row">
  <div class="col col-sm-12">
    <h1 class='text-center'> Influencers Index </h1>
    <% if @influencer_order_creator.try(:errors).try(:any?) %>
      <div class="alert alert-danger" role="alert">
        <% @influencer_order_creator.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>
    <%= form_tag("#") %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <table class="table table-hover table-responsive table-condensed">
      <thead>
        <tr>
          <th class="custom_checkbox">
            <%= check_box_tag 'Select All', nil, nil, class: 'master_check_box' %>
          </th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address Line 1</th>
          <th>Address Line 2</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Bra Size</th>
          <th>Top Size</th>
          <th>Leggings Size</th>
          <th>Top Size</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody></tbody>
      <% influencers.each do |influencer| %>
        <tr>
          <td>
            <%= check_box_tag "influencers[]", influencer.id, nil, class: 'check_box' %>
          </td>
          <td>
            <%= influencer.first_name %>
          </td>
          <td>
            <%= influencer.last_name %>
          </td>
          <td>
            <%= influencer.address1 %>
          </td>
          <td>
            <%= influencer.address2 %>
          </td>
          <td>
            <%= influencer.city %>
          </td>
          <td>
            <%= influencer.state %>
          </td>
          <td>
            <%= influencer.zip %>
          </td>
          <td>
            <%= influencer.email %>
          </td>
          <td>
            <%= influencer.phone %>
          </td>
          <td>
            <%= influencer.bra_size %>
          </td>
          <td>
            <%= influencer.top_size %>
          </td>
          <td>
            <%= influencer.bottom_size %>
          </td>
          <td>
            <%= influencer.sports_jacket_size %>
          </td>
          <td>
            <%= influencer.updated_at.strftime('%B %e at %l:%M %p') %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= submit_tag("Create Influencer Orders", formaction: influencer_orders_path,
                   "data-confirm" => "Are you sure you want to send orders to the warehouse?",
                   class: 'btn btn-primary') %>
    <%= submit_tag("Create Orders For All Influencers in the Database",
                   name: :create_orders_for_all_influencers_in_database,
                   formaction: influencer_orders_path,
                   "data-confirm" => "Are you sure you want to send orders to the warehouse?",
                   class: 'btn btn-danger pull-right') %>
  </div>
</div>

<div class="row">
  <%= paginate influencers %>
</div>
